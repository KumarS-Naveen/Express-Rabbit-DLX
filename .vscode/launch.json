{
  "version": "0.2.0",
  "configurations": [{
    "type": "node",
    "request": "launch",
    "name": "Debug TypeScript in Node.js",
    "preLaunchTask": "typescript",
    "program": "${workspaceFolder}/app/app.ts",
    "cwd": "${workspaceFolder}",
    "protocol": "inspector",
    "outFiles": [
      "${workspaceFolder}/build/**/*.js"
    ],
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }]
}